    <th>Nama</th>
    <th>URL</th>
  </thead>
  <tbody>
    <% @products.each.with_index(1) do |item, index| %>
      <tr>
        <td><%= item.orderable_name %></td>
        <td>
          <% prefix = item.productable.url? ? "" : (Setting.site_storage_host&.value.presence || ENV["STORAGE_HOST"].presence || "http://localhost:3000") %>
