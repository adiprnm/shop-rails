<div class="text-green">
  <small>
    <% if product.coming_soon? %>
      <span>Coming soon!</span>
    <% elsif product.sale_price? %>
      <del class="text-gray"><%= idr product.price %></del>
      <span><%= idr product.sale_price %></span>
    <% else %>
      <span><%= idr product.price %></span>
    <% end %>
  </small>
</div>
