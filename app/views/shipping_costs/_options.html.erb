<% if shipping_options.present? %>
  <div class="mt-4 card">
    <h3>Pilihan Pengiriman</h3>
    <div id="shipping-options-list">
      <% shipping_options.each do |option| %>
        <div class="form-group check-boxes">
          <%= radio_button_tag "shipping_option", "#{option[:courier]}-#{option[:service]}", false,
            id: "shipping_#{option[:courier]}_#{option[:service]}",
            data: {
              action: "change->shipping#updateTotal",
              price: option[:price],
              courier: option[:courier],
              service: option[:service]
            } %>
          <%= label_tag "shipping_#{option[:courier]}_#{option[:service]}" do %>
            <strong><%= option[:courier] %> - <%= option[:service] %></strong>
            <br>
            <%= idr option[:price] %>
            <% if option[:etd].present? %>
              <small class="text-gray"> (Estimasi: <%= option[:etd] %>)</small>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= hidden_field_tag :selected_courier, nil, data: { shipping_target: "courierInput" } %>
    <%= hidden_field_tag :selected_service, nil, data: { shipping_target: "serviceInput" } %>
    <%= hidden_field_tag :shipping_cost, nil, data: { shipping_target: "costInput" } %>
  </div>
<% end %>
