<%= content_for(:title) { "Edit Pesanan ##{ @order.id } | #{ Current.settings["site_name"] } admin" } %>

<div>
  <%= tag.div flash[:notice], class: "flash-success mb-4" if flash[:notice] %>

  <h1>Edit Pesanan #<%= @order.id %></h1>

  <%= form_for [ :admin, @order ] do |f| %>
    <div class="grouped">
      <div class="form-group">
        <%= f.label :customer_name %>
        <%= f.text_field :customer_name %>
      </div>

      <div class="form-group">
        <%= f.label :customer_email_address %>
        <%= f.email_field :customer_email_address %>
      </div>
    </div>

    <div class="grouped">
      <div class="form-group mb-4">
        <%= f.label :customer_agree_to_terms %>
        <%= f.check_box :customer_agree_to_terms %>
      </div>

      <div class="form-group">
        <%= f.label :customer_agree_to_receive_newsletter %>
        <%= f.check_box :customer_agree_to_receive_newsletter %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.select :state, Order.states.keys.map { |key| [ key.titleize, key ] }.to_h %>
    </div>

    <div class="form-group">
      <%= f.label :remark %>
      <%= f.text_area :remark %>
    </div>

    <% if @order.contains_physical_products? %>
      <div class="form-group">
        <%= f.label :tracking_number %>
        <%= f.text_field :tracking_number %>
      </div>
    <% end %>

    <%= f.submit "Simpan" %>
  <% end %>
</div>
