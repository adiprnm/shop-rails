<%= form_for [:admin, page] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 10 %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.select :state, Page.states.keys.map { |s| [ s.humanize, s ] }, { include_blank: false } %>
  </div>

  <%= f.submit "Simpan" %>
<% end %>
